api.mail({
    recipients: ['${1: receive_mail}'],
    subject: '${2: mail_title}',
    body: '${3: mail_body}',
    attachments: ['${4: attachments_url}']
}, function(ret, err){
    if(ret.status){
        api.alert({
            msg: '发送成功'
        });
    } else{
        api.alert({
            msg: '发送失败'
        });
    }
});
